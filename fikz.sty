\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{fikz}[2021/08/26 by Benjamin Bernard]
%
\RequirePackage{tikz}
%
\makeatletter
\newif\ifbeamerloaded@fikz
\newif\ifoption@fikz
%
\DeclareOption{doc}{\option@fikztrue\beamerloaded@fikzfalse}
\DeclareOption{beamer}{\option@fikztrue\beamerloaded@fikztrue}
\ProcessOptions\relax
%
\ifoption@fikz\else
	\@ifclassloaded{beamer}{\beamerloaded@fikztrue}{\beamerloaded@fikzfalse}
\fi
%
\def\ifempty@fikz#1{
	\ifx\relax#1\relax
		\expandafter\@firstoftwo
	\else
		\expandafter\@secondoftwo
	\fi
}
%
\newcommand{\fixtikzpath}[2][]{
	\ifempty@fikz{#1}{
		\expandafter\def\csname #2@standard@fikz\endcsname{\path[#2]}
	}{
		\expandafter\def\csname #2@standard@fikz\endcsname{\path[#1]}
	}
	\expandafter\def\csname #2@gobble@fikz\endcsname<##1>##2;{
		\ifbeamerloaded@fikz
			\def\overlay@fikz{<##1>}
			\ifempty@fikz{#1}{
				\expandafter\onslide\overlay@fikz{\path[#2] ##2;}
			}{
				\expandafter\onslide\overlay@fikz{\path[#1] ##2;}
			}
		\else
			\ifempty@fikz{#1}{\path[#2] ##2;}{\path[#1] ##2;}
		\fi
	}
	\expandafter\def\csname #2@check@fikz\endcsname{
		\ifx\next@fikz<
			\expandafter\expandafter\csname #2@gobble@fikz\endcsname
		\else
			\expandafter\expandafter\csname #2@standard@fikz\endcsname
		\fi
	}
	\expandafter\def\csname #2\endcsname{\expandafter\futurelet\expandafter\next@fikz\csname #2@check@fikz\endcsname}
}
%
\def\fixtikznode{
	\def\node@standard@fikz{\tikz@path@overlay{node}}
	\def\node@gobble@fikz<##1>##2;{
		\ifbeamerloaded@fikz
			\def\overlay@fikz{<##1>}
			\expandafter\onslide\overlay@fikz{\tikz@path@overlay{node} ##2;}
		\else
			\tikz@path@overlay{node} ##2;
		\fi
	}
	\def\node@check@fikz{
		\ifx\next@fikz<
			\expandafter\node@gobble@fikz
		\else
			\expandafter\node@standard@fikz
		\fi
	}
	\def\node{\futurelet\next@fikz\node@check@fikz}
}
%
\tikzset{every picture/.code={
	\fixtikzpath{draw}
	\fixtikzpath{fill}
	\fixtikzpath{clip}
	\fixtikzpath[fill, draw]{filldraw}
	\fixtikznode
}}
\makeatother